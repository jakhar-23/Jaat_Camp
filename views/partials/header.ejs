<body>

 <nav class="navbar navbar-expand-lg navbar-light bg-light ">
  <a class="navbar-brand" href="/">JaatCamp</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

    <div id="navbar"  class="collapse navbar-collapse" >
      <ul class="nav navbar-nav  ">
            <li class="<%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>nav-item active" ><a class="nav-link" href="/campgrounds">Home<span class="sr-only">(current)</span></a></li>
          </ul>
    </div>

   <div id="navbar" class="collapse navbar-collapse nav justify-content-end  ">
          
          <ul class="nav navbar-nav nav justify-content-end">
              <% if(!currentUser){ %>
                  <li class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>"><a class="nav-link" href="/login">Login</a></li>
                  <li class="<%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>"><a class="nav-link" href="/register">Sign Up</a></li>
              <% } else { %>
                  <li><a class="nav-link" href="#">Signed In As <%= currentUser.username %></a></li>
                  <li><a class="nav-link" href="/logout">Logout</a></li>
              <% } %>
          </ul>
        </div>
 </nav>
     <span class="icon-bar"></span>

    <div class="container" >
        <% if (error && error.length > 0) { %>
        <div class="alert alert-danger" role="alert" >
          <%= error %>
        </div>
       <% } %>
         
         <% if (success && success.length > 0) { %>
             <div class="alert alert-success" role="alert" >
             <%= success %>
             </div>
             <% } %>
    </div>

